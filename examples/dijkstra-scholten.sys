Component Element <A> {
  A -> first  -> B
  B -> second -> C
  C -> third  -> D
  D -> fourth -> A
  A -> isA    -> A
  B -> isB    -> B
  C -> isC    -> C
  D -> isD    -> D
}

Formula {
  first(0);
  fourth(0);
  last(p) . second(p);
  last(p) . third(p);

  # propagate to the right
  p < q & q = succ(p) . second(p) & first(q);

  # propagate to the left
  p < q & q = succ(p) . third(p) & fourth(q);
}
