Component Task
initial waiting;
waiting -> start -> critical;
critical -> stop -> waiting;

Component Semaphore
initial free;
free -> aquire -> busy;
busy -> release -> free;

Formula
ex p: true. start(p) & aquire(0);
ex p: true. stop(p) & release(0);

nomutex: "ex1 i, j: 0 <= i & i < n & 0 <= j & j < n & i ~= j & i in critical & j in critical"
